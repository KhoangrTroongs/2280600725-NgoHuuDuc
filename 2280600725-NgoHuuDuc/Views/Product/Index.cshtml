@model IEnumerable<NgoHuuDuc_2280600725.Models.Product>
@{
ViewData["Title"] = "Sản phẩm";
}

<!-- Page Header -->
<section class="py-5 bg-dark text-center" style="margin-top: 76px;">
    <div class="container">
        <h1 class="display-4">Bộ sưu tập của chúng tôi</h1>
        <p class="lead">Browse our exquisite collection of premium tailored
            suits</p>
    </div>
</section>

<!-- Products Section -->
<section class="py-5 bg-darker">

    <div class="container">
        @if (User.IsInRole("Administrator"))
        {
        <a asp-action="Create" class="btn btn-primary px-5 mb-4">Thêm sản
            phẩm mới</a>
        }
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="d-flex align-items-center">
                    <p class="mb-0"><strong>@Model.Count()</strong> sản phẩm
                        đã tìm thấy ở danh mục
                        "@ViewBag.SelectedCategory"</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="d-flex justify-content-md-end">
                    <div class="dropdown">
                        <button
                            class="btn btn-secondary dropdown-toggle"
                            type="button" id="sortDropdown"
                            data-bs-toggle="dropdown" aria-expanded="false">
                            Danh mục sản phẩm
                        </button>
                        <ul class="dropdown-menu bg-dark"
                            aria-labelledby="sortDropdown">
                            <li><a
                                    class="dropdown-item text-light @(ViewBag.SelectedCategory == null ? "active"
                                    : "")"
                                    href="@Url.Action("Index",
                                    "Product")">Tất cả danh mục</a></li>

                            @foreach (var category in ViewBag.Categories)
                            {
                            <li>
                                <a
                                    class="dropdown-item text-light @(ViewBag.SelectedCategory?.Id == category.Id ? "active"
                                    : "")"
                                    href="@Url.Action("Index", "Product",
                                    new { categoryId=category.Id
                                    })">@category.Name
                                </a>
                            </li>
                            }

                        </ul>

                    </div>
                </div>
            </div>
        </div>
        <h2>@(ViewBag.SelectedCategory == null ? "Tất cả sản phẩm" :
            ViewBag.SelectedCategory.Name)</h2>
        @if (!Model.Any())
        {
        <p>Không có sản phẩm nào trong danh mục này.</p>
        }else {
        <div class="row">
            @foreach (var item in Model)
            {
            <div class="col-md-4">
                <div class="card product-card">
                    <div class="position-relative">
                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                        <img src="@item.ImageUrl"
                            class="card-img-top product-card-img"
                            alt="@item.Name">

                        }
                        else
                        {
                        <img src="~/images/img/img1.jpg"
                            class="card-img-top product-card-img"
                            alt="Lỗi hình ảnh">
                        }
                        <div class="product-card-badge">Best Seller</div>
                    </div>
                    <div class="card-body product-card-body">
                        <h5
                            class="card-title product-card-title">@item.Name</h5>
                        <p class="product-card-price">
                            @item.Price.ToString("N0") VNĐ
                            <span class="old-price">@item.Price.ToString("N0") VNĐ</span>
                        </p>
                        <p class="card-text">@(
                            item.Description?.Length > 100
                            ? item.Description.Substring(0, 100) + "..."
                            : item.Description
                            )</p>
                        <div class="d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@item.Id"
                                class="btn btn-secondary">View Details</a>
                            @if (User.IsInRole("Administrator"))
                            {
                            <div>
                                <a asp-action="Edit" asp-route-id="@item.Id"
                                    class="btn btn-primary">Sửa</a>
                                <a asp-action="Delete"
                                    asp-route-id="@item.Id"
                                    class="btn btn-danger">Xóa</a>
                            </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
            }

        </div>

        <!-- Pagination -->
        @* <div class="d-flex justify-content-center mt-5">
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    <li class="page-item disabled">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    <li class="page-item active"><a class="page-link"
                            href="#">1</a></li>
                    <li class="page-item"><a class="page-link"
                            href="#">2</a></li>
                    <li class="page-item"><a class="page-link"
                            href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div> *@
        }
    </div>
</section>